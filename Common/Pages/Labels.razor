@page "/labels"
@inject HttpClient Http
@using System.Collections.ObjectModel
@using System.Collections.Specialized
@using System.ComponentModel

<PageTitle>Labels</PageTitle>

<h3>Labels</h3>

<div class="labels">
    @foreach (var index in LabelItems.Select((e, i) => i))
    {
        <input type="text" class="label-element label-text editable-input" style="background: @LabelItems[index].Background; color: @LabelItems[index].Color" @bind-value="LabelItems[index].Title" />
        <input type="color" class="label-element label-background editable-input" style="background: @LabelItems[index].Background" @bind-value="LabelItems[index].Background" />
        <input type="color" class="label-element label-color editable-input" style="background: @LabelItems[index].Background" @bind-value="LabelItems[index].Color" />
        <button class="btn label-element label-delete" style="background: @LabelItems[index].Background; color: @LabelItems[index].Color" @onclick="() => DeleteLabel(index)">x</button>
    }
</div>

<button class="btn btn-primary" @onclick="AddLabel">+</button>

@code {
    private ObservableCollection<Label> LabelItems { get; set; } = new();

    protected override async void OnInitialized()
    {
        var labels = await Http.GetFromJsonAsync<List<Label>>("api/labels");
        if (labels != null)
        {
            LabelItems = new ObservableCollection<Label>(labels);
            foreach (Label item in LabelItems)
            {
                item.PropertyChanged += UpdateServer;
            }
            StateHasChanged();
        }
        LabelItems.CollectionChanged += UpdateServer;
    }

    private void AddLabel()
    {
        var random = new Random();
        Label newLabel = new Label("Label", "#000000", $"#{random.Next(0, 256).ToString("X2")}{random.Next(0, 256).ToString("X2")}{random.Next(0, 256).ToString("X2")}");
        newLabel.PropertyChanged += UpdateServer;
        LabelItems.Add(newLabel);
    }

    private void DeleteLabel(int index)
    {
        LabelItems.RemoveAt(index);
    }

    private async void UpdateServer(object? sender, EventArgs e)
    {
        await Http.PutAsJsonAsync("api/labels", LabelItems);
    }
}
